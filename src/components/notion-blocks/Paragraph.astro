---
import * as interfaces from "../../lib/interfaces.ts";
import { convertToTailwindColor } from "../../lib/style-helpers.ts";
import RichText from "./RichText.astro";
import NotionBlocks from "../NotionBlocks.astro";

export interface Props {
  block: interfaces.Block;
  headings: interfaces.Block[];
  renderChildren?: boolean; // Make this optional
}

const { block, headings, renderChildren = true } = Astro.props;
---

<div class={`${convertToTailwindColor(block.Paragraph.Color)} my-1 text-base min-h-7`} id={block.Id}>
	{
		block.Paragraph.RichTexts.map((richText) => (
			<RichText richText={richText} blockID={block.Id} />
		))
	}
	{
		block.Paragraph.RichTexts.length === 0 && <br />
	}
	{
		block.Paragraph.Children && renderChildren && (
			<NotionBlocks blocks={block.Paragraph.Children} headings={headings} />
		)
	}
</div>
