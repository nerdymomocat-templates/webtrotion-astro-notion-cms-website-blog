---
import { FULL_WIDTH_SM } from "@/constants";
import { BlueskyPost } from "./astro-bluesky";
export interface Props {
	url: URL;
}

const { url } = Astro.props;
const blueskyUrl = url.toString();
---

{
	blueskyUrl && (
		<>
			<div
				class={`no-rss w-full ${FULL_WIDTH_SM ? "" : "screen:max-w-[min(420px,96%)]"} mx-auto overflow-scroll`}
			>
				<BlueskyPost id={blueskyUrl} />
			</div>
			<div class="rss-only hidden">
				{"Mentions "} <a href={blueskyUrl}>{"bluesky post"}</a>
			</div>
		</>
	)
}
